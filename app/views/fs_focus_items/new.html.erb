<h2>New Focus Item</h2>

<p id="notice"><%= notice %></p>

<p><strong> Part Filter: </strong></p>
<input type="text" id="filter" oninput="partDescriptions()"/>
<br>
<br>
<%= button_tag "Select All", {id: "toggle_button", :onclick=> ("setToggle()"), class: "btn btn-primary"} %>
<%= form_with url: fs_focus_items_selected_path, local: true, method: 'get' do |f| %>
  <table>
    <thead>
      <tr>
        <th><%= f.label :name %></th>
        <th><%= f.label :part %></th>
        <th><%= f.label :start_date %></th>
        <th><%= f.label :end_date %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= f.select :name, @names, {}, {multiple: true, id: :fs_focus_item_name}%></td>
        <td><%= f.select :part, $descs, {}, {id: :fs_focus_item_description}%></td>
        <td><%= f.date_field :start_date, id: :fs_focus_item_start_date, :value => @default_date %></td>
        <td><%= f.date_field :end_date, id: :fs_focus_item_end_date, :value => @default_date %></td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "Enter" %>
<% end %>
<br>

<%= link_to 'Back', fs_focus_items_path, class: "btn btn-primary" %>
<p id= "descs" hidden> <%= $jsdescs %> </p>
